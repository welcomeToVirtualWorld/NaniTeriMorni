<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llfavourite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ShowFavouriteList">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="4dp"
                android:layout_margin="10dp"
                app:cardElevation="2dp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/favouriteView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/favouriteStoryImage"
                        android:src="@drawable/lionnthemouse"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="120dp" />
                    <TextView
                        android:id="@+id/favouriteStoryTitle"
                        android:layout_below="@+id/favouriteStoryImage"
                        android:text="Lion and the mo"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/delete"
                        android:layout_width="match_parent"
                        android:background="#FDD835"
                        android:text="Delete"
                        android:textSize="20sp"
                        android:layout_below="@id/favouriteStoryTitle"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>